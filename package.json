{
  "name": "styleguide-boilerplate",
  "version": "2.0.0",
  "description": "Boilerplate setup for developping styleguides.",
  "repository": {
    "type": "git",
    "url": "git@github.com:gertvdb/styleguide_boilerplate.git"
  },
  "scripts": {
    "postinstall": "rsync --ignore-existing ./gulp/config/config-default.json ./gulp/config/config.json",
    "start": "./node_modules/gulp/bin/gulp.js",
    "dev": "node server.js | gulp watch",
    "test": "./node_modules/sass-lint/bin/sass-lint.js -c gulp/config/.sass_lint.yml -f stylish -v --max-warnings 0",
    "distribute": "./node_modules/gulp/bin/gulp.js distribute"
  },
  "preferGlobal": false,
  "private": true,
  "devDependencies": {
    "autoprefixer": "~8.5.0",
    "connect": "~3.6.6",
    "connect-livereload": "~0.6.0",
    "css-mqpacker": "~6.0.2",
    "cssnano": "~3.10.0",
    "glob": "~7.1.2",
    "gulp": "^4.0.0",
    "gulp-changed": "~3.2.0",
    "gulp-clean": "~0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-consolidate": "~0.2.0",
    "gulp-htmlhint": "^2.1.1",
    "gulp-if": "^2.0.2",
    "gulp-insert": "~0.5.0",
    "gulp-json-editor": "~2.4.1",
    "gulp-live-server": "0.0.31",
    "gulp-livereload": "^4.0.0",
    "gulp-nunjucks": "~4.0.0",
    "gulp-plumber": "~1.2.0",
    "gulp-postcss": "~7.0.1",
    "gulp-rename": "~1.2.3",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-lint": "~1.3.4",
    "gulp-shell": "~0.6.5",
    "gulp-sourcemaps": "~2.6.4",
    "gulp-uglify": "~3.0.0",
    "gulp-util": "~3.0.8",
    "gulp-zip": "^4.1.0",
    "http": "0.0.0",
    "lodash": "~4.17.10",
    "merge-stream": "~1.0.1",
    "opn": "~5.3.0",
    "run-sequence": "~2.2.1",
    "sass-vars-to-js": "github:vdswouter/sass-vars-to-js",
    "serve-index": "~1.9.1",
    "serve-static": "~1.13.2",
    "vinyl-ftp": "~0.6.1",
    "yargs": "~11.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "chokidar": "^2.0.3",
    "express": "^4.18.2",
    "node-gyp": "^3.6.2",
    "nunjucks": "^3.1.2",
    "ttf2woff2": "^2.0.3"
  }
