{% macro styleguide() %}
	<h4 class="styleguide__sub-title js-scroll-nav__sub-title">Textfield</h4>
	<p class="styleguide__p">
		Use &lt;a&gt; for navigation, &lt;button&gt; for everything else.
		Submit/reset buttons are the only exceptions, using &lt;input [type="submit"]&gt;
		to trigger default browser behaviour associated with submitting form input.
	</p>

    {% set textField = textField('Text input', 'Enter your text here', 'Tell the user what kind of input is expected, add a clickthrough as needed') %}
    {{ textField }}
	<div class="styleguide__highlight-box">
		<pre>
			<code>
				{{ textField | forceescape | nl2br}}
			</code>
		</pre>
	</div>

	<p class="styleguide__p"></p>


    {% set emailField = emailField('Email', 'info@your-domein.com', 'Don\'t worry, we won\'t spam you.') %}
    {{ emailField }}
	<div class="styleguide__highlight-box">
		<pre>
			<code>
				{{ emailField | forceescape | nl2br}}
			</code>
		</pre>
	</div>

	<p class="styleguide__p"></p>


    {% set passwordField = passwordField('Password', 'Enter your password here', 'Passwords should be 6 characters or more. Be tricky!') %}
    {{ passwordField }}
	<div class="styleguide__highlight-box">
		<pre>
			<code>
				{{ passwordField | forceescape | nl2br}}
			</code>
		</pre>
	</div>

	<p class="styleguide__p"></p>


    {% set numberField = numberField('Amount', '3', 'Select the number of products you want to order.') %}
    {{ numberField }}
	<div class="styleguide__highlight-box">
		<pre>
			<code>
				{{ numberField | forceescape | nl2br}}
			</code>
		</pre>
	</div>

	<p class="styleguide__p"></p>


    {% set phoneField = phoneField('Phone number', '+32 ××× ×× ×× ××', 'Don\'t worry, we only contact you when it\'s absolutely necessary.') %}
    {{ phoneField }}
	<div class="styleguide__highlight-box">
		<pre>
