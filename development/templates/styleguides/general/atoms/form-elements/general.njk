		<label for="input-number">{{ label }}</label>
		<div class="a-input__field-holder">
			<input type="number" name="input-number" id="input-number" placeholder="{{ placeholder }}" min="0" step="0.5" max="20" />
		</div>
		<small>{{ description }}</small>
	</div>
{% endmacro %}

