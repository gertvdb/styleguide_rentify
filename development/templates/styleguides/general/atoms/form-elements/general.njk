{% macro textField(label, placeholder, description) %}
	<div class="a-input">
		<label for="input-text">{{ label }}</label>
		<div class="a-input__field-holder">
			<input type="text" name="input-text" id="input-text" placeholder="{{ placeholder }}" />
		</div>
		<small>{{ description }}</small>
	</div>
{% endmacro %}

{% macro emailField(label, placeholder, description) %}
	<div class="a-input">
		<label for="input-email">{{ label }}</label>
		<div class="a-input__field-holder">
			<input type="email" name="input-email" id="input-email" placeholder="{{ placeholder }}" />
		</div>
		<small>{{ description }}</small>
	</div>
{% endmacro %}

{% macro passwordField(label, placeholder, description) %}
