{# ------------------------#}
{# -------Code block-------#}
{# ------------------------#}

{% macro buttonSecondaryLink(text, href) %}
	<a href="{{ href }}" class="a-button a-button--outline" title="{{ text }}">{{ text }}</a>
{% endmacro %}

{% macro buttonSecondary(text) %}
	<button class="a-button a-button--outline" title="{{ text }}">{{ text }}</button>
{% endmacro %}

{% macro buttonSecondarySubmit(text) %}
	<input type="submit" class="a-button a-button--outline" value="{{ text }}">
{% endmacro %}


{% macro buttonSecondaryLinkDisabled(text) %}
	<a class="a-button a-button--outline" disabled title="{{ text }}">{{ text }}</a>
{% endmacro %}

{% macro buttonSecondaryDisabled(text) %}
	<button class="a-button a-button--outline" disabled title="{{ text }}">{{ text }}</button>
{% endmacro %}

{% macro buttonSecondarySubmitDisabled(text) %}
	<input type="submit" class="a-button a-button--outline" disabled value="{{ text }}">
{% endmacro %}

{# ----------------------------#}
{# ------Styleguide block------#}
{# ----------------------------#}
{% macro styleguide() %}

	<h4 class="styleguide__sub-title">Secondary button</h4>
	<p class="styleguide__p">
		Use &lt;a&gt; for navigation, &lt;button&gt; for everything else.
		Submit/reset buttons are the only exceptions, using &lt;input [type="submit"]&gt;
		to trigger default browser behaviour associated with submitting form input.
	</p>

    {% set buttonSecondary = buttonSecondary('Secondary button') %}
    {{ buttonSecondary }}

    {% set buttonSecondaryLink = buttonSecondaryLink('Secondary button', '#') %}
    {{ buttonSecondaryLink }}

    {% set buttonSecondarySubmit = buttonSecondarySubmit('Secondary button') %}
    {{ buttonSecondarySubmit }}


	<div class="styleguide__highlight-box">
		<code>
            {{ buttonSecondary | forceescape | nl2br }}
            {{ buttonSecondaryLink | forceescape | nl2br }}
            {{ buttonSecondarySubmit | forceescape | nl2br }}
		</code>
	</div>

	<p class="styleguide__p"></p>

    {% set buttonSecondaryDisabled = buttonSecondaryDisabled('Disabled button') %}
    {{ buttonSecondaryDisabled }}

    {% set buttonSecondaryLinkDisabled = buttonSecondaryLinkDisabled('Disabled button') %}
    {{ buttonSecondaryLinkDisabled }}

    {% set buttonSecondarySubmitDisabled = buttonSecondarySubmitDisabled('Disabled button') %}
    {{ buttonSecondarySubmitDisabled }}


	<div class="styleguide__highlight-box">
		<code>
            {{ buttonSecondaryDisabled | forceescape | nl2br }}
            {{ buttonSecondaryLinkDisabled | forceescape | nl2br }}
            {{ buttonSecondarySubmitDisabled | forceescape | nl2br }}
		</code>
	</div>

{% endmacro %}
