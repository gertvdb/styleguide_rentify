{# ------------------------#}
{# -------Code block-------#}
{# ------------------------#}

{% macro buttonLink(text, href) %}
	<a href="{{ href }}" class="a-button" title="{{ text }}">{{ text }}</a>
{% endmacro %}

{% macro button(text) %}
	<button class="a-button" title="{{ text }}">{{ text }}</button>
{% endmacro %}

{% macro buttonSubmit(text) %}
	<input type="submit" class="a-button" value="{{ text }}">
{% endmacro %}


{% macro buttonLinkDisabled(text) %}
	<a class="a-button" disabled title="{{ text }}">{{ text }}</a>
{% endmacro %}

{% macro buttonDisabled(text) %}
	<button class="a-button" disabled title="{{ text }}">{{ text }}</button>
{% endmacro %}

{% macro buttonSubmitDisabled(text) %}
	<input type="submit" class="a-button" disabled value="{{ text }}">
{% endmacro %}


{% macro code() %}
	<a href="#buttons" class="a-button" title="Primary button">Primary button</a>
	<br />

	<button class="a-button" title="Icon button">
		<span class="icon-close"></span><span class="is-hidden">Icon button</span>
	</button>

	<button class="a-button" title="With icon before">
		<span class="icon-close"></span><span>With icon before</span>
	</button>

	<button class="a-button" title="With icon after">
		<span>With icon after</span><span class="icon-close"></span>
	</button>
{% endmacro %}

{# ----------------------------#}
{# ------Styleguide block------#}
{# ----------------------------#}
{% macro styleguide() %}

	<h4 class="styleguide__sub-title">Primary button</h4>
	<p class="styleguide__p">
		Use &lt;a&gt; for navigation, &lt;button&gt; for everything else.
		Submit/reset buttons are the only exceptions, using &lt;input [type="submit"]&gt;
		to trigger default browser behaviour associated with submitting form input.
	</p>

	{% set button = button('Primary button') %}
	{{ button }}

    {% set buttonLink = buttonLink('Primary button', '#') %}
    {{ buttonLink }}

    {% set buttonSubmit = buttonSubmit('Primary button') %}
    {{ buttonSubmit }}


	<div class="styleguide__highlight-box">
		<code>
			{{ button | forceescape | nl2br }}
            {{ buttonLink | forceescape | nl2br }}
            {{ buttonSubmit | forceescape | nl2br }}
		</code>
	</div>

	<p class="styleguide__p"></p>

    {% set buttonDisabled = buttonDisabled('Disabled button') %}
    {{ buttonDisabled }}

    {% set buttonLinkDisabled = buttonLinkDisabled('Disabled button') %}
    {{ buttonLinkDisabled }}

    {% set buttonSubmitDisabled = buttonSubmitDisabled('Disabled button') %}
    {{ buttonSubmitDisabled }}


	<div class="styleguide__highlight-box">
		<code>
            {{ buttonDisabled | forceescape | nl2br }}
            {{ buttonLinkDisabled | forceescape | nl2br }}
            {{ buttonSubmitDisabled | forceescape | nl2br }}
		</code>
	</div>

{% endmacro %}
