{% macro styleguide(DATA) %}
	<h1 class="styleguide__title js-scroll-nav__sub-title">Typography</h1>
	<small>/sass/base/_quarks/_typography.scss</small>

	<h4 class="styleguide__sub-title">Font stack</h4>
	<p class="styleguide__p">
		Below are links to download the fonts that are used throughout this styleguide.
		We use a limited amount of fonts to make sure the brand stands out.
	</p>
	<div>
		<ul>
            {% for font  in DATA.FONT_FAMILY %}
				<li><a href="/fonts/{{ font }}.zip" download>{{ font }}</a></li>
            {% endfor %}
		</ul>
	</div>

	<h4 class="styleguide__sub-title">Headings</h4>
	<p class="styleguide__p">
		The list of different heading sizes used throughout the project. Make sure you provide a nice vertical rhythm.
	</p>

	{% macro h1(text) %}
		<h1>{{ text }}</h1>
    {% endmacro %}
    {% set h1 = h1(DATA.CONFIG.TEXT_DUMMY_SMALL) %}
	{{ h1 }}

	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<pre>
			<code class="html">
            	{{ h1 | forceescape | nl2br }}
			</code>
		</pre>
	</div>

	<p class="styleguide__p">&nbsp;</p>

	{% macro h2(text) %}
		<h2>{{ text }}</h2>
    {% endmacro %}
    {% set h2 = h2(DATA.CONFIG.TEXT_DUMMY_SMALL) %}
	{{ h2 }}

	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<pre>
			<code class="html">
            	{{ h2 | forceescape | nl2br }}
			</code>
		</pre>
	</div>

	<p class="styleguide__p">&nbsp;</p>

    {% macro h3(text) %}
		<h3>{{ text }}</h3>
